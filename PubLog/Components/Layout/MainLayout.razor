@inherits LayoutComponentBase

<div class="min-h-screen flex flex-col">
    <header class="bg-gradient-to-r from-slate-900 via-slate-900 to-slate-800 text-white shadow-lg border-b border-slate-700/50">
        <NavMenu />
    </header>

    <main class="flex-1 max-w-5xl mx-auto w-full px-4 py-6 pb-24 sm:pb-6">
        @Body
    </main>

    <footer class="text-center text-sm text-slate-500 py-4">
        PubLog
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet
     class="fixed bottom-0 left-0 right-0 bg-red-600 text-white text-center py-2 z-50 hidden">
    An unhandled error has occurred.
    <a href="." class="underline ml-2">Reload</a>
    <span class="ml-2 cursor-pointer dismiss">&#x2715;</span>
</div>
