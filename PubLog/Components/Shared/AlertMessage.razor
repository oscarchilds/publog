@if (!string.IsNullOrEmpty(Message))
{
    <div class="@(IsError ? "bg-red-500/10 border border-red-500/30 text-red-400" : "bg-emerald-500/10 border border-emerald-500/30 text-emerald-400") px-4 py-3 rounded mb-4 text-sm">
        @Message
    </div>
}

@code {
    [Parameter] public string? Message { get; set; }
    [Parameter] public bool IsError { get; set; }
}
