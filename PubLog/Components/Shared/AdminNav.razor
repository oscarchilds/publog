    <a href="/admin/areas" class="text-sm font-medium min-h-[44px] flex items-center px-3 rounded-lg hover:bg-amber-50 @(IsActive("/admin/areas") ? "bg-amber-100 text-amber-800" : "text-gray-600")">
        Areas
    </a>
    <a href="/admin/pubs" class="text-sm font-medium min-h-[44px] flex items-center px-3 rounded-lg hover:bg-amber-50 @(IsActive("/admin/pubs") ? "bg-amber-100 text-amber-800" : "text-gray-600")">
