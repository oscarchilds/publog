@code {
    [Inject] private NavigationManager Navigation { get; set; } = null!;

    private bool IsActive(string path)
    {
        var uri = new Uri(Navigation.Uri);
        return uri.AbsolutePath.StartsWith(path, StringComparison.OrdinalIgnoreCase);
    }
}
