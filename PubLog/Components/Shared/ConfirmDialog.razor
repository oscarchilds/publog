@if (Visible)
{
    <div class="fixed inset-0 bg-black/50 z-40 flex items-center justify-center p-4" @onclick="OnCancel">
        <div class="bg-white rounded-xl shadow-lg max-w-sm w-full p-6" @onclick:stopPropagation>
            <h2 class="text-lg font-bold text-gray-900 mb-2">@Title</h2>
            <p class="text-gray-600 mb-6">@Message</p>
            <div class="flex justify-end gap-3">
                <button @onclick="OnCancel" class="btn-secondary">Cancel</button>
                <button @onclick="OnConfirm" class="btn-danger">Confirm</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public string Title { get; set; } = "Are you sure?";
    [Parameter] public string Message { get; set; } = "This action cannot be undone.";
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}
