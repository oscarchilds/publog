@page "/Error"
@using System.Diagnostics

<PageTitle>Error - PubLog</PageTitle>

<div class="min-h-[50vh] flex items-center justify-center">
    <div class="text-center">
        <h1 class="text-3xl font-bold text-red-500 mb-2">Something went wrong</h1>
        <p class="text-slate-400 mb-4">An error occurred while processing your request.</p>

        @if (ShowRequestId)
        {
            <p class="text-sm text-slate-500 mb-4">
                <strong>Request ID:</strong> <code class="bg-slate-800 px-2 py-1 rounded">@RequestId</code>
            </p>
        }

        <a href="/" class="btn-primary">Back to Home</a>
    </div>
</div>

@code {
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
}
