@page "/area/{Id:int}"
@rendermode InteractiveServer
@inject AreaService AreaService
@inject VisitService VisitService
@inject NavigationManager Navigation
@using System.Security.Claims

<PageTitle>@(area?.Name ?? "Area") - PubLog</PageTitle>

@if (area is null)
{
    <LoadingSpinner />
}
else
{
    <div class="mb-4">
        <a href="/" class="text-blue-400 hover:text-blue-300 text-sm">&larr; All Areas</a>
    </div>

    <div class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-bold text-slate-100">@area.Name</h1>
        <div class="flex gap-2">
            <button @onclick="() => showMap = false"
                    class="@ListBtnClass !py-2 !text-sm">
                List
            </button>
            <button @onclick="() => showMap = true"
                    class="@MapBtnClass !py-2 !text-sm"
                    disabled="@(area.Pubs.Count == 0)">
                Map
            </button>
        </div>
    </div>

    @if (isAuthenticated && area.Pubs.Count > 0)
    {
        var visitedCount = area.Pubs.Count(p => visitedPubIds.Contains(p.Id));
        var totalPubs = area.Pubs.Count;
        <div class="mb-4">
            <div class="flex items-center justify-between text-sm text-slate-400 mb-1">
                <span>@visitedCount of @totalPubs pubs visited</span>
                <span>@(totalPubs > 0 ? (visitedCount * 100 / totalPubs) : 0)%</span>
            </div>
            <div class="w-full bg-slate-800 rounded-full h-2.5">
                <div class="bg-gradient-to-r from-blue-500 to-blue-400 h-2.5 rounded-full transition-all"
                     style="width: @(totalPubs > 0 ? (visitedCount * 100 / totalPubs) : 0)%"></div>
            </div>
        </div>
    }

    @if (!showMap)
    {
        <div class="mb-4">
            <input @bind="searchQuery" @bind:event="oninput" placeholder="Search pubs..."
                   class="input-field max-w-sm" />
        </div>
    }

    @if (area.Pubs.Count == 0)
    {
        <p class="text-slate-400">No pubs in this area yet.</p>
    }
    else if (showMap)
    {
        <LeafletMap
            CenterLat="area.Pubs.Average(p => p.Lat)"
            CenterLng="area.Pubs.Average(p => p.Lng)"
            Zoom="14"
            Height="500px"
            Markers="GetMarkers()" />
    }
    else
    {
        var filtered = FilteredPubs;
        @if (filtered.Count == 0)
        {
            <p class="text-slate-400">No pubs match your search.</p>
        }
        else
        {
            <div class="space-y-3">
                @foreach (var pub in filtered)
                {
                    var isVisited = visitedPubIds.Contains(pub.Id);
                    <a href="/pub/@pub.Id" class="card block @(isVisited && isAuthenticated ? "border-emerald-500/30 bg-emerald-500/10" : "")">
                        <div class="flex items-center gap-2">
                            @if (isAuthenticated && isVisited)
                            {
                                <span class="text-emerald-400 text-lg" title="Visited">&#10003;</span>
                            }
                            <h2 class="font-semibold text-slate-100">@pub.Name</h2>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(pub.Address))
                        {
                            <p class="text-sm text-slate-400 mt-1">@pub.Address</p>
                        }
                        @if (!string.IsNullOrWhiteSpace(pub.Description))
                        {
                            <p class="text-sm text-slate-400 mt-1 line-clamp-2">@pub.Description</p>
                        }
                    </a>
                }
            </div>
        }
    }
}

@code {
    [Parameter] public int Id { get; set; }
    [CascadingParameter] private Task<AuthenticationState> AuthState { get; set; } = null!;

    private Area? area;
    private bool showMap;
    private string searchQuery = "";
    private bool isAuthenticated;
    private HashSet<int> visitedPubIds = [];

    private string ListBtnClass => !showMap ? "btn-primary" : "btn-secondary";
    private string MapBtnClass => showMap ? "btn-primary" : "btn-secondary";

    private List<Pub> FilteredPubs =>
        area?.Pubs
            .Where(p => string.IsNullOrEmpty(searchQuery) ||
                        p.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
            .OrderBy(p => p.Name)
            .ToList() ?? [];

    private List<MapMarker> GetMarkers()
    {
        if (area is null) return [];
        return area.Pubs.Select(p => new MapMarker(
            p.Lat, p.Lng,
            $"<a href='/pub/{p.Id}'><b>{p.Name}</b></a><br/>{p.Address}",
            isAuthenticated && visitedPubIds.Contains(p.Id) ? "#22c55e" : "#3b82f6"
        )).ToList();
    }

    protected override async Task OnInitializedAsync()
    {
        area = await AreaService.GetById(Id);
        if (area is null)
        {
            Navigation.NavigateTo("/");
            return;
        }

        var auth = await AuthState;
        isAuthenticated = auth.User.Identity?.IsAuthenticated == true;
        if (isAuthenticated)
        {
            var userIdClaim = auth.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (userIdClaim is not null)
            {
                visitedPubIds = await VisitService.GetVisitedPubIds(int.Parse(userIdClaim));
            }
        }
    }
}
